	<t t-name="ImportView.holidays.public">
		<div class="oe_padding">
			<h2>Import from external provider</h2>
			<div>
			<label for="provider_id">Provider :</label>
				<select name="provider_id">
					<t t-foreach="providers or []" t-as="provider">
						<option t-att-value="provider['id']">
							<t t-esc="provider['name']" />
						</option>
					</t>
				</select>
			</div>
			<div>
			<label for="country_id">Country :</label>
				<select name="country_id">
					<t t-foreach="countries or []" t-as="country">
						<option t-att-value="country['id']">
							<t t-esc="country['name']" />
						</option>
					</t>
				</select>
			</div>
			<div>
				<label for="year_start">Start Year :</label>
					<input name="year_start"/>
			</div>
			<div>
				<label for="year_end">End Year :</label>
					<input name="year_end"/>
			</div>
		</div>
    </t>
    
	<t t-extend="ImportView">
		<t t-jquery="div.oe_padding:last()" t-operation="append">
				<div class='.import_public_holiday'/>
		</t>
	</t>
	
</templates>