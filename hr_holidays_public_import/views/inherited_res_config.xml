<openerp>
	<data>
		<record model="ir.ui.view" id="view_general_configuration">
			<field name="name">base.config.settings.calendar.provider</field>
			<field name="model">base.config.settings</field>
			<field name="inherit_id" ref="base_setup.view_general_configuration" />
			<field name="arch" type="xml">
				<xpath expr="//group[last()]" position="after">
					<group>
						<label for="id" string="Calendar Provider"/>
						<div name="Calendar Provider">
							<div>
							<label for="googlecalendar_name" />
								<field name="googlecalendar_name" readony="1"/>
								
							</div>
							<div>
							<label for="googlecalendar_url" />
								<field name="googlecalendar_url" readony="1"/>
								
							</div>
							<div>
								<blockquote>
									To setup the import process from your provider, first you have to
									get the api key.
									<br />
									Paste the API KEY here:
									<field name="googlecalendar_api_key"
										placeholder="e.g. 1234-xyz.apps.googleusercontent.com" />
								</blockquote>
							</div>

						</div>
					</group>
				</xpath>
			</field>
		</record>

	</data>
</openerp>
