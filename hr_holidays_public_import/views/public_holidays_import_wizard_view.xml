<openerp>
	<data>
		<record model="ir.ui.view" id="wizard_import_public_holidays_form_view">
			<field name="name">Import Public Holidays</field>
			<field name="model">hr.holidays.public.wizard</field>
			<field name="arch" type="xml">
				<form string="Import Public Holidays">
					<group>
						<field name="provider_id" required="1"/>
						<field name="country_id" required="1"/>
						<field name="provider_name" invisible="1"/>
						<field name="year_start" required="1" attrs="{'invisible':[('provider_name', '=', 'Google Calendar')]}"/>
						<field name="year_end" required="1" attrs="{'invisible':[('provider_name', '=', 'Google Calendar')]}" />
					</group>
					<footer>
						<button name="import_public_holidays" type="object" string="Import" class="oe_highlight" />
						or
						<button special="cancel" string="Cancel" />
					</footer>

				</form>
			</field>
		</record>
		
		<act_window id="launch_import_public_holidays_wizard" name="Import Public Holidays"
			src_model="hr.holidays.public" res_model="hr.holidays.public.wizard"
			view_mode="form" target="new" key2="client_action_multi" />

	</data>
</openerp>